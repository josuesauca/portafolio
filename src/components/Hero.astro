<script>
  // Array of words to cycle through
  const words = ["Fanático de la tecnología", "Ingeniero en Computación", "Gusto por la Inteligencia Artificial"];
  let currentWordIndex = 0;

  const typingElement = document.getElementById("typing-text");

  const typingSpeed = 100;     // milliseconds per character
  const erasingSpeed = 70;     // milliseconds per character
  const delayBeforeErase = 2000;   // ms before starting to erase
  const delayBeforeNext = 500;     // ms before typing next word

  function typeText(element, text, index = 0) {
    if (index < text.length) {
      element.textContent += text.charAt(index);
      setTimeout(() => typeText(element, text, index + 1), typingSpeed);
    } else {
      // After typing is done, wait and start erasing
      setTimeout(() => eraseText(element, text.length - 1), delayBeforeErase);
    }
  }

  function eraseText(element, index) {
    if (index >= 0) {
      element.textContent = element.textContent.slice(0, -1);
      setTimeout(() => eraseText(element, index - 1), erasingSpeed);
    } else {
      // Move to next word in array
      currentWordIndex = (currentWordIndex + 1) % words.length;
      const nextWord = words[currentWordIndex];
      setTimeout(() => typeText(element, nextWord), delayBeforeNext);
    }
  }

  // Start the loop with the first word
  window.addEventListener("load", () => {
    typeText(typingElement, words[currentWordIndex]);
  });
</script>
